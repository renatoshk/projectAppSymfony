{% extends 'base.html.twig' %}
    {% block stylesheets %}
        {{ parent() }}
    {% endblock %}
{% block body %}
    {{ parent() }}
    <div class="container">
        <div id="projectbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info" >
                <h1 style="text-align: center">Add New Member To {{ project }} </h1>
                <div style="padding-top:30px" class="panel-body" >
                    {{ form_start(projectMember)}}
                    <div class="form-group">
                        {{ form_row(projectMember.user,{
                            attr:{ class:'form-control'}
                        }) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(projectMember.projectRole, {
                            attr:{ class:'form-control'}
                        }) }}
                    </div>
                    <div class="form-group">
                        <button style="margin-top:10px" class="btn btn-lg btn-primary" type="submit">
                            Add
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(projectMember) }}
{% endblock %}